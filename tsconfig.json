{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2015",
    "module": "commonjs",

    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "strict": true,

    "outDir": "./.dist",

    "lib": [
      "es2015"
    ],
    "types": [
      "node"
    ]

  },

  "watchOptions": {
    "excludeDirectories": ["node_modules", "dist"],
  },

  "include": ["./"],
  "exclude": ["src/__tests__/**/*"],

  "ts-node": {
    "swc": true
  }

}
	
