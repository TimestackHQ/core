{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "NodeNext",
    "removeComments": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "strict": true,
    "outDir": "./.dist",
    "lib": [
      "ESNext"
    ],
    "types": [
      "node"
    ],
    "baseUrl": "../",
    "paths": {
      "@shared/*": [
        "../shared/*"
      ]
    }
  },
  "watchOptions": {
    "excludeDirectories": [
      "node_modules",
      "dist"
    ],
  },
  //  "include": ["./", "../shared"],
  "exclude": [
    "src/__tests__/**/*"
  ],
  "ts-node": {
    "swc": true
  }
}